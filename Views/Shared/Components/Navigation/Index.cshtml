@using InternalManagementECommerceTool.ViewModels
@model NavigationViewModel

<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid px-4 px-lg-5">
        <!-- Left side: Brand -->
        <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-area="">Ecommerce Shop</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Center & Right side -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Center navigation -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li><a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">All Products</a></li>
                <li><a class="nav-link" asp-area="Dashboard" asp-controller="Products" asp-action="Index">Dashboard</a></li>
            </ul>

            <!-- Right side (Cart + Login) -->
            <div class="d-flex align-items-center ms-auto">
                <form asp-controller="Cart" asp-action="Index" asp-area="" class="me-3">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Cart
                        @if (Model.Cart == null)
                        {
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        }
                        else
                        {
                            <span class="badge bg-dark text-white ms-1 rounded-pill">@Model.Cart.Count</span>
                        }
                    </button>
                </form>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </div>
</nav>